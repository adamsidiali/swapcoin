html,body
    margin 0
    padding 0
    font-family sans-serif

body
    padding-top 100px

.animated
    animation-duration 500ms

#admin_tools
    position fixed
    margin 0
    top 0
    right 0
    left 0
    list-style none
    display flex
    flex-flow row wrap
    background-color #1bb23a
    padding 10px
    box-sizing border-box

    li
        font-weight 400
        margin-right 10px
        color #ddd

        &:hover
            color #fff

.start-swap-wrapper
    max-width 800px
    margin 0px auto
    padding 40px
    box-sizing border-box
    font-family sans-serif

    .has-swap-in-progress,
    .has-completed-swap
        position absolute
        top 38px
        left 0
        right 0
        background-color orange
        text-align center
        padding 10px
        box-sizing border-box
        color #000

    .has-completed-swap
        background-color teal
        color #fff

    h2
        text-align center
        font-size 40px
        margin 0 0 20px 0

    input
        padding 10px
        box-sizing border-box
        font-size 20px
        font-weight 400
        color #1bb23a
        width 100%
        border 0
        border-bottom 2px solid black
        text-align center
        outline none
        background-color transparent

    button
        display block
        margin 40px auto 0 auto
        padding 20px 40px
        border 2px solid #1bb23a
        background-color transparent
        border-radius 60px
        box-sizing border-box
        outline none
        font-size 20px
        color #1bb23a

        &.disabled
            opacity 0.5
            pointer-events none

        &:hover
            cursor pointer
            background-color #1bb23a
            color #fff

.swap-in-progress
    h2
        color #1bb23a
        font-size 30px
        text-align center

    .cancel-swap
        position fixed
        bottom 10px
        right 10px
        color #fff
        font-weight 700
        z-index 9999

.payment-request-popup-wrapper
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    height 100vh
    width 100vw
    background-color rgba(0,0,0,0.5)
    z-index 999

    .payment-request-popup
        background-color #fff
        border-radius 10px
        padding 40px
        box-sizing border-box
        margin 0 auto
        margin-top 40px
        max-width 700px
